root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.{md,markdown}]
trim_trailing_whitespace = false

[{lib,src,test,__tests__}/**.js]
indent_style = space
indent_size = 2

[configure]
indent_style = space
indent_size = 2

[{deps,tools}/**]
indent_style = ignore
indent_size = ignore
end_of_line = ignore
trim_trailing_whitespace = ignore
charset = ignore